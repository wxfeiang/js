{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#d40c2d3d", //修改光标所在行的背景色
    "editor.lineHighlightBorder": "#1daf5f42" //修改光标所在行的边框色
  },

  "easysass.formats": [
    //nested：嵌套缩进的 css 代码。
    //expanded：没有缩进的、扩展的css代码。
    //compact：简洁格式的 css 代码。
    //compressed：压缩后的 css 代码

    {
      "format": "expanded",
      "extension": ".css" //设置编译输出的文件名
    }
  ],
  "easysass.targetDir": "./css/", //提供 css 输出路径的设置（可以是绝对路径或者相对路径）

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "wxml": "html"
  },

  // #每次保存的时候自动格式化
  "editor.formatOnSave": true,

  //编辑器默认的代码检查规则关闭

  "javascript.format.enable": true,

  "emmet.triggerExpansionOnTab": true,

  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  // 每行在这个字符数内整合代码,根据自己屏幕情况设定
  "prettier.printWidth": 120,
  // 是否在每行末尾加上分号
  "prettier.semi": false,
  // 如果为true，将使用 单引号否则使用双引号
  "prettier.singleQuote": true,
  //  在末尾行不要，
  "prettier.trailingComma": "none",
  // 对html的内容使用js-beautify-html
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "minapp-vscode.disableAutoConfig": true,
  "svn.path": "D:\\Program Files\\TortoiseSVN\\bin",

  "svn.sourceControl.ignoreOnCommit": ["ignore-on-commit"],
  "TortoiseSVN.showPath.exclude": ["**/{node_modules,bower_components}/**"],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "files.autoGuessEncoding": true,
  "sync.quietSync": false,
  "editor.fontSize": 16,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "cssrem.autoRemovePrefixZero": false,
  "css.remoteStyleSheets": [],
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "terminal.integrated.tabs.enabled": true,
  // #每次保存的时候自动格式化
  "editor.formatOnSave": true,
  // #每次保存的时候将代码按eslint格式进行修复
  "eslint.autoFixOnSave": true,
  // 添加 vue 支持
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "todo-tree.tree.showScanModeButton": true,
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#0000ff",
      "backgroundColor": "#ff0000"
    },
    {
      "text": "DOING",
      "color": "#0000ff",
      "backgroundColor": "#33ff33"
    }
  ],
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "terminal.integrated.allowMnemonics": true,
  "sync.gist": "a7057f84057589ff0f64b4eb0c9861d3",
  "vsicons.dontShowNewVersionMessage": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  // 文件名别名跳转
  "alias-skip.mappings": {
    "~@/": "/src",
    "views": "/src/views",
    "assets": "/src/assets",
    "network": "/src/network",
    "common": "/src/common"
  },
  "projectManager.git.baseFolders": ["/Users/wangpeng/project/"],
  "workbench.editor.autoLockGroups": {}
}
