{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#e20c0c3d", //修改光标所在行的背景色
    "editor.lineHighlightBorder": "#0c13de42" //修改光标所在行的边框色
  },
  "easysass.formats": [
    //nested：嵌套缩进的 css 代码。
    //expanded：没有缩进的、扩展的css代码。
    //compact：简洁格式的 css 代码。
    //compressed：压缩后的 css 代码
    // {
    //   "format": "expanded",
    //   "extension": ".css"  // 可配置输出多个
    // }
    {
      "format": "expanded",
      "extension": ".css" //设置编译输出的文件名
    }
  ],
  "easysass.targetDir": "./css/", //提供 css 输出路径的设置（可以是绝对路径或者相对路径）
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "wxml": "html"
  },
  //编辑器默认的代码检查规则关闭
  "javascript.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  // 每行在这个字符数内整合代码,根据自己屏幕情况设定
  "prettier.printWidth": 100,
  // 是否在每行末尾加上分号
  "prettier.semi": false,
  // 如果为true，将使用 单引号否则使用双引号
  "prettier.singleQuote": true,
  //  在末尾行不要，
  "prettier.trailingComma": "none",
  // 对html的内容使用js-beautify-html
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "minapp-vscode.disableAutoConfig": true,
  //"svn.path": "D:\\Program Files\\TortoiseSVN\\bin",
  //"svn.sourceControl.ignoreOnCommit": ["ignore-on-commit"],
  "TortoiseSVN.showPath.exclude": ["**/{node_modules,bower_components}/**"],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.autoGuessEncoding": true,
  "editor.fontSize": 16,
  "cssrem.autoRemovePrefixZero": false,
  "css.remoteStyleSheets": [],
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "terminal.integrated.tabs.enabled": true,
  // #每次保存的时候自动格式化
  "editor.formatOnSave": true,
  // #每次保存的时候将代码按eslint格式进行修复
  // "eslint.autoFixOnSave": true,
  // 添加 vue 支持
  // "eslint.validate": [
  //   "javascript",
  //   "javascriptreact",
  //   {
  //     "language": "vue",
  //     "autoFix": true
  //   }
  // ],
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },

  "security.workspace.trust.untrustedFiles": "open",
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "terminal.integrated.allowMnemonics": true,
  "sync.quietSync": false,
  "sync.gist": "a7057f84057589ff0f64b4eb0c9861d3", // git
  "vsicons.dontShowNewVersionMessage": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  // 文件名别名跳转
  "alias-skip.mappings": {
    "~@/": "/src",
    "views": "/src/views",
    "assets": "/src/assets",
    "network": "/src/network",
    "common": "/src/common"
  },
  "projectManager.git.baseFolders": ["/Users/wangpeng/project/"],
  "workbench.editor.autoLockGroups": {},
  "terminal.integrated.defaultProfile.osx": "zsh",
  //是否开启
  "powermode.enabled": true,
  //效果样式  “水花-particles”, “烟花-fireworks”, “火焰-flames”, “雪花-magic”, “幽灵-clippy”, “激光-simple-rift”, “大激光-exploding-rift”
  "powermode.presets": "flames", //特效大
  "powermode.shake.enabled": false,
  "powermode.explosions.size": 5,
  //todo-tree settings
  "todo-tree.general.tags": ["todo:", "done:", "fix:", "note:", "del:"],
  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text",
    "foreground": "#ffff00",
    "background": "#fff",
    "opacity": 0.5,
    "iconColour": "#ffff00",
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "todo": {
      "icon": "milestone",
      "iconColour": "#e6a23c",
      "foreground": "#fff",
      "rulerColour": "#e6a23c",
      "background": "#e6a23c"
    },

    "done:": {
      "icon": "issue-closed",
      "iconColour": "#67c23a",
      "foreground": "#fff",
      "rulerColour": "#67c23a",
      "background": "#67c23a"
    },
    "fix:": {
      "icon": "flame",
      "iconColour": "#f56c6c",
      "foreground": "#fff",
      "background": "#f56c6c",
      "rulerLane": "full"
    },
    "note:": {
      "icon": "note",
      "iconColour": "#409eff",
      "foreground": "#fff",
      "background": "#409eff",
      "rulerLane": "full"
      // "type": "line"
    },
    "del:": {
      "icon": "x",
      "iconColour": "#a00606",
      "foreground": "#fff",
      "rulerColour": "#a00606",
      "background": "#a00606"
    }
  },
  "powermode.combo.timerEnabled": "hide",
  "powermode.combo.counterEnabled": "hide",
  "varTranslation.baiduSecret": "20180628000181278,fUvXjMpl42RRt8_OZt4d",
  "varTranslation.translationEngine": "baidu",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  }, //自动生成注释插件  文件头部注释
  "fileheader.customMade": {
    "Author": "wxfeiang",
    "Description": "",
    "Date": "Do not edit",
    "LastEditTime": "Do not edit",
    "FilePath": ""
  }, //自动生成注释插件  函数注释
  "fileheader.cursorMode": {
    "description": "",
    "param": "",
    "return": ""
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "leek-fund.funds": [[]],
